<?xml version="1.0"?>
<run>
<tool>
  <title>Slicer Driver</title>
  <about>Example of Rappture driving Slicer.</about>
  <command>
      python @tool/wrap_slicer.py @driver
  </command>
</tool>
<input>
    <note>
        <contents>file://description.html</contents>
    </note>
    <loader>
      <about>
        <label>NRRD File</label>
        <description>Upload a NRRD file.</description>
      </about>
      <upload>
        <to>input.string(nrrdfile)</to>
        <prompt>Load NRRD File</prompt>
      </upload>
    </loader>
    <choice id="local">
        <about>
            <label>Local NRRD Resource</label>
            <description>Try this until we can upload a remote NRRD</description>
        </about>
        <option>
            <about>
                <label>dwi2.nrrd</label>
                <description>dwi2.nrrd</description>
            </about>
            <value>dwi2.nrrd</value>
        </option>
    </choice>
    <string id="nrrdfile">
        <about>
            <label>Loaded NRRD File</label>
        </about>
    </string>
</input>
</run>
