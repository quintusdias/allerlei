<?xml version="1.0"?>
<run>
<tool>
  <title>Slicer Driver</title>
  <about>Example of Rappture driving Slicer.</about>
  <command>
      python @tool/wrap_slicer.py @driver
  </command>
</tool>
<input>
    <note>
        <contents>file://description.html</contents>
    </note>
    <group id="tabs">
        <group id="local">
            <about>
                <label>Local</label>
                <description>Load from a file already on the HUB</description>
            </about>
            <choice id="choice">
                <about>
                    <label>Local NRRD Resource</label>
                    <description>Try this until we can upload a remote NRRD</description>
                </about>
                <option>
                    <about>
                        <label>dwi2.nrrd</label>
                        <description>dwi2.nrrd</description>
                    </about>
                    <value>dwi2.nrrd</value>
                </option>
            </choice>
        </group>
        <group id="remote">
            <about>
                <label>Remote</label>
                <description>Load from internet (but local if not on hub!!!)</description>
            </about>
            <loader>
              <about>
                <label>NRRD File</label>
                <description>Upload a NRRD file.</description>
              </about>
              <upload>
                <to>input.group(tabs).group(remote).string(nrrdfile)</to>
                <prompt>Load NRRD File</prompt>
              </upload>
            </loader>
            <string id="nrrdfile">
                <about>
                    <label>Loaded NRRD File</label>
                </about>
            </string>
        </group>
    </group>
</input>
</run>
